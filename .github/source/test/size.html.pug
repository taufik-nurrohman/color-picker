extends ../_index.pug

block state
  - const scripts = ['../index.min.js']
  - const styles = ['../index.min.css']
  - const title = 'Color Picker'

block style
  style
    | h1, h2, h3, h4, h5, h6 {
    |   display: inline-block;
    |   cursor: pointer;
    | }
    |
    | h1 input,
    | h2 input,
    | h3 input,
    | h4 input,
    | h5 input,
    | h6 input {
    |   font-size: 100%;
    | }

block script
  script
    | let sources = document.querySelectorAll('h1 input, h2 input, h3 input, h4 input, h5 input, h6 input');
    |
    | for (let i = 0, j = sources.length; i < j; ++i) {
    |     (source => {
    |         (new CP(source, {
    |             parent: source.parentNode || null
    |         })).on('change', function(r, g, b, a) {
    |             this.source.value = this.color(r, g, b, a);
    |             this.source.parentNode.style.color = this.color(r, g, b, a);
    |         });
    |     })(sources[i]);
    | }

block content
  main
    each i in [1, 2, 3, 4, 5, 6]
      #{'h' + i}!= 'Size ' + i + ': <input type="text">'
    p By default, color picker size will follow the container&rsquo;s text size; the container that bounds to the color picker panel.
    pre: code
      | /* To change the color picker size */
      | .color-picker {
      |   font-size: 20px;
      | }
      |
      | /* To change the color picker control&rsquo;s size */
      | .color-picker i {
      |   font-size: 15px;
      | }